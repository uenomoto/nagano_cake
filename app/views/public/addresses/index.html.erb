<div class="container-fluid">
  
  <div class="row m-4">
    <div class="col-sm-1"></div>
    <div class="col-lg-2">
      <h5 style="background-color:#dcdcdc;">配送先登録/一覧</h5>
    </div>
  </div>
  
  <div class="col-md-10 ml-5">
    
    <%= form_with model: @address, url: address_path, method: :post do |f| %>
    
   　　 <%= render 'layouts/error_messages', model: f.object %> 
    
    <div class="form-group">
      <%= f.label "郵便番号(ハイフンなし)", class: "mr-5" %>
      <%= f.text_field :postal_code, placeholder:"0000000" %>
    </div>
    <div class="form-group">
      <%= f.label "住所", style: "margin-right: 186px;" %>
      <%= f.text_field :address, class: "col-5" %>
    </div>
    <div class="form-group">
      <%= f.label "宛名", style: "margin-right: 186px;" %>
      <%= f.text_field :name %>
      <%= f.submit "新規登録", class: "btn btn-success px-5", style: "margin-left: 460px;" %>
    </div>
    <% end %>
  </div>
  
  <div class="col-lg-6 m-5">
    
     
    <table class="table table-bordered">
      
      <thead class="thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colsapn="4"></th>
        </tr>
      </thead>
      
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_addresses_path(address.id), class: "btn btn-success" %>
              <%= link_to "削除する", destroy_address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger ml-2" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
