<div class="container-fluid">
  
  <div class="row m-4">
    <div class="col-sm-1"></div>
    <div class="col-lg-2">
      <h5 class="text-center" style="background-color:#dcdcdc; margin-right:50px;">配送先編集</h5>
    </div>
  </div>
  
  <div class="col-md-10 ml-5">
    
    <%= form_with model: @address, url: patch_address_path, method: :patch do |f| %>
    
    <div class="form-group">
      <%= f.label "郵便番号(ハイフンなし)", class: "mr-5" %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="form-group">
      <%= f.label "住所", style: "margin-right: 186px;" %>
      <%= f.text_field :address, class: "col-5" %>
    </div>
    <div class="form-group">
      <%= f.label "宛名", style: "margin-right: 186px;" %>
      <%= f.text_field :name %>
      <%= f.submit "変更内容を保存", class: "btn btn-success", style: "margin-left: 460px;" %>
    </div>
    <% end %>
  </div>
  
</div>
