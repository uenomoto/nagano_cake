<div class="container">
  
 <div class="row">
   <div class="col-1"></div>
   <div class="col-xs-3 mb-3">
    <h5 style="background-color:#dcdcdc;", class="my-4 ml-5">会員情報編集</h5>
  </div>
 </div>
 
  <%= form_with model: @customer, url: customer_path ,method: :patch do |f| %>
   <div class="col-xs-12 offset-1">
  
    <div class="form-group col-xs-9">
      <%= f.label :"氏名", class: "col-sm-4 control-label" %>
      <%= f.text_field :last_name, class: "col-sm-3" %>
      <%= f.text_field :first_name, class: "col-sm-3 ml-4" %>
    </div>
    
    <div class="form-group col-xs-9">
      <%=f.label :"フリガナ", class: "col-sm-4 control-label" %>
      <%= f.text_field :last_name_kana, class: "col-sm-3" %>
      <%= f.text_field :first_name_kana, class: "col-sm-3 ml-4" %>
    </div>
    
    <div class="form-group col-xs-9">
      <%= f.label :"郵便番号", class: "col-sm-4 control-label" %>
      <%= f.text_field :postal_code, class: "col-sm-3" %>
    </div>
    
    <div class="form-group col-xs-9">
      <%= f.label :"住所", class: "col-sm-4 control-label" %>
      <%= f.text_field :address, class: "col-sm-7" %>
    </div>
     
     <div class="form-group col-xs-9">
       <%= f.label :"電話番号", class: "col-sm-4 control-label" %>
       <%= f.text_field :telephone_number, class: "col-sm-3" %>
     </div>
     
     <div class="form-group col-xs-9">
       <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
       <%= f.text_field :email, class: "col-sm-3" %>
     </div>
     
     <div class="row">
       <div class="col-4"></div>
       <div class="col-md-5">
       <div class="form-group d-flex justify-content-start">
         <%= f.submit "編集内容を保存", class: "btn btn-success mr-5 px-5" %>
       </div>
     </div>
     <div class="col-md-3"><%= link_to "退会する", unsubscribe_path, class: "btn btn-danger ml-5" %></div>
   </div>
     
  <% end %>
  </div>
</div>

