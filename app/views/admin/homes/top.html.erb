<div class="container">
  
  <div class="row">
    <div class="col-md-2">
     <h5 style="background-color:#dcdcdc;", class="my-4">注文履歴一覧</h5>
    </div>
  </div>
  
<table class="table">
  <thead class="bg-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
      <th colsapn="4"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      
      <td><%= link_to admin_order_path(order.id), class: "text-dark" do %>
      <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      <% end %>
      </td>
      
      <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
      <td><%= order.ordered_goods.count %></td>
      <td><%= order.status %></td>
      
    </tr>
    <% end %>
  </tbody>
  
 </table>
<%= paginate(@orders)%>
</div>
