<div class="container">
  <div class="row">
    <div class="col">
      <div class="col-5 offset-3">
       <h4 class="text-left">管理者ログイン</h4>

       <%= form_with model: @admin, url: admin_session_path do |f| %>


        <div class="field my-2">
          <%= f.label :メールアドレス, class: "form-label mt-3" %><br />
          <%= f.email_field :email, autofocus: true, placeholder:"email", autocomplete: "email", class: "form-control" %>
        </div>

         <div class="field my-2">
            <%= f.label :パスワード, class: "form-label mt-3" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
         </div>
         
        <div class="actions my-2 text-left">
           <%= f.submit "ログイン" ,class: "btn btn-primary" %>
        </div>
        <% end %>
        
        
      </div>
    </div>
  </div>
</div>
