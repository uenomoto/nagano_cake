<div class="container">
 <div class="row text-left">
   <div class="col-md-12 mt-5">
    <h5>ジャンル一覧・追加</h5>
   </div>
  </div>
  <div class="row my-5 d-flex justify-content-left">
   <div class="col-xs-12">
      <%= form_with model: @genre, url: "/admin/genres" do |f| %>
      
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name, placeholder:"ジャンル名" %>
      <%= f.submit "新規登録", class: "btn btn-success ml-4 py-2" %>
      
      <% end %>
   </div>
  </div>
  
  <div class="row my-5 justify-content-left">
   <div class="col-lg-5 mt-3">
    <table class="table">
     <thead>
      <tr>
       <th class="bg-light">ジャンル</th>
       <th class="bg-light"></th>
       <th colsapn="2", class="bg-light"></th>
      </tr>
     </thead>
 
      <tbody>
       <% @genres.each do |genre| %>
        <tr>
         <td><%= genre.name %></td>
         <td><%= link_to edit_admin_genre_path(genre.id) do %>
         <span class= "btn btn-success">編集する</span>
         <% end %>
         </td>
        </tr>
 <% end %>
 
     </tbody>
    </table>
   </div>
  </div>
</div>