<div class="container-fluid">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-xl- mt-4 mb-5">
      <h5 style="background-color:#dcdcdc;">商品詳細</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-xl-1"></div>
    <div class="col-xl-2">
     <%= image_tag @item.get_image(300,300) %>
   </div>

   <div class="col-xl-4 offset-1">

  <table class="table table-borderless">
    <tr>
      <th>商品名</th>
      <td><%= @item.name %></td>
    </tr>

    <tr>
      <th>商品説明</th>
      <td><%= @item.introduction %></td>
    </tr>

    <tr>
      <th>ジャンル</th>
      <td><%= @item.genre.name %></td>
    </tr>

    <tr>
      <th>税込価格</br>
    　(税抜価格)
      </th>
      <td><%= @item.with_tax_price.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</td>
    </tr>

    <tr>
       <th>販売ステータス</th>
      <td><% if @item.is_active == true %>
         <strong class="text-success">販売中</strong>
         <% else %>
         <strong class="text-secondary">販売停止中</strong>
         <% end %>
     </td>
    </tr>

    <tr>
      <th></th>
      <td><%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success col-sm-4 col-xl-4 control-label" %></td>
    </tr>

   </table>
  </div>
 </div>
</div>