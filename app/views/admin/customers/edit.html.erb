<div class="container">
 <div class="row">
   <div class="col-xs-2">
    <h5 style="background-color:#dcdcdc;", class="my-4"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h5>
  </div>
 </div>
  <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  
    <%= render 'layouts/error_messages', model: f.object %> 
  
   <div class="col-xs-10 offset-1">
  
    <div class="form-group col-xs-9">
      <%= f.label :"会員id", class: "col-sm-4" %>
      <%= f.label :"#{@customer.id}" %>
    </div>
  
    <div class="form-group col-xs-9">
      <%= f.label :"氏名", class: "col-sm-4 control-label" %>
      <%= f.text_field :last_name, class: "col-sm-3" %>
      <%= f.text_field :first_name, class: "col-sm-3" %>
    </div>
    
    <div class="form-group col-xs-9">
      <%=f.label :"フリガナ", class: "col-sm-4 control-label" %>
      <%= f.text_field :last_name_kana, class: "col-sm-3" %>
      <%= f.text_field :first_name_kana, class: "col-sm-3" %>
    </div>
    
    <div class="form-group col-xs-9">
      <%= f.label :"郵便番号", class: "col-sm-4 control-label" %>
      <%= f.text_field :postal_code, class: "col-sm-3" %>
    </div>
    
    <div class="form-group col-xs-9">
      <%= f.label :"住所", class: "col-sm-4 control-label" %>
      <%= f.text_field :address, class: "col-sm-7" %>
    </div>
     
     <div class="form-group col-xs-9">
       <%= f.label :"電話番号", class: "col-sm-4 control-label" %>
       <%= f.text_field :telephone_number, class: "col-sm-3" %>
     </div>
     
     <div class="form-group col-xs-9">
       <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
       <%= f.text_field :email, class: "col-sm-3" %>
     </div>
     
     <div class="form-group col-xs-9">
       <%= f.label :"会員ステータス", class: "col-sm-4 control-label" %>
       <%= f.radio_button :is_deleted, false %>
       <%= f.label :"有効" %>
       <%= f.radio_button :is_deleted, true %>
       <%= f.label :"退会" %>
     </div>
     
     <div class="form-group col-xs-9 d-flex justify-content-around">
       <%= f.submit "変更を保存", class: "btn btn-success col-sm-3 control-label mr-5" %>
     </div>
     
   </div>
     
  <% end %>
</div>
