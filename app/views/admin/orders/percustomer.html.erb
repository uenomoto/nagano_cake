<div class="container">

  <div class="row m-3">
    <div class="col-sm-">
      <h5 style="background-color:#dcdcdc;"><%= @customer.full_name %>さんの注文履歴</h5>
    </div>
  </div>

  <table class="table">
  <thead class="bg-light">
    <tr>
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customer.orders.each do |order| %>
    <tr>
      <td><%= link_to admin_order_path(order.id), class: "text-dark" do %>
      <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      <% end %>
      </td>
      <td><%= order.ordered_goods.count %></td>
      <td><%= order.status %></td>
    </tr>
    <% end %>
  </tbody>
 </table>
</div>