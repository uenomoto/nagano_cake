<% if admin_signed_in? %>
<%= form_with url: admin_search_path, method: :get, local: true do |f| %>
  <div class="d-flex justify-content-end mt-1 mr-5">
    <%= f.text_field :word, placeholder: "Search",class: "mr-2" %>
    <%= f.select :model, options_for_select({"Item" => "item"})%>
    <%= f.select :method, options_for_select({"前方一致" => "forward", "後方一致" => "backword", "部分一致" => "patial"})%>
    <%= f.submit "検索", class:"btn btn-outline-secondary ml-2"%>
  </div>
<% end %>
<% elsif customer_signed_in? %>
<%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="d-flex justify-content-end mt-1 mr-5">
    <%= f.text_field :word, placeholder: "Search",class: "mr-2" %>
    <%= f.select :model, options_for_select({"Item" => "item"})%>
    <%= f.select :method, options_for_select({"前方一致" => "forward", "後方一致" => "backword", "部分一致" => "patial"})%>
    <%= f.submit "検索", class: "btn btn-outline-secondary ml-2"%>
<% end %>
<% end %>

